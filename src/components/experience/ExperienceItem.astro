---
interface Props {
  id: string;
  title: string;
  description: string;
  year: string;
  summary: string;
}
const { title, description, year, summary, id } = Astro.props;
---

<div class="relative">
  <div
    class="absolute size-4 bg-blue-500 rounded-full mt-1.5 -start-2 border border-white dard:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <div class="ml-6">
    <span class="mt-1 block text-sm font-semibold text-primary">{year}</span>
    <h3 class="text-xl font-bold text-blue-500">{title}</h3>
    <span class="my-5 block">{summary}</span>
    <div
      id={id}
      class="mt-5 max-w-screen-lg experience-content text-gray-300 text-pretty"
      set:html={description}
    />
  </div>
</div>
