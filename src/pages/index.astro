---
import Layout from "../layouts/Layout.astro";
import HeaderSection from "../components/HeaderSection.astro";
import ExperienceSection from "../components/experience/ExperienceSection.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import SectionContainer from "../components/SectionContainer.astro";
---

<Layout
  title="Porfolio de Jesús Tirado - Desarrollador y Programador Full-Stack"
  description="Porfolio profesional de Jesús Tirado. Desarollador de aplicaciones web, APIs de integración durante más de 15 años."
>
  <main class="px-5">
    <SectionContainer id="top" class="py-20 lg:py-44 pb-24">
      <HeaderSection />
    </SectionContainer>

    <SectionContainer id="experience">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7" /> Experiencia profesional
      </h2>
      <ExperienceSection class="ml-3" />
    </SectionContainer>
  </main>
</Layout>
